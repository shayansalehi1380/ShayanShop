@page
@model ShayanShop.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "مدیریت سایت";
}

<h1>لیست محصولات</h1>
<hr />
<p>
    <a asp-page="Add" class="myButton">افزودن محصول</a>
</p>
<table>
    <thead>
        <tr>
            <th>تصویر</th>
            <th>نام</th>
            <th>قیمت</th>
            <th>دستورات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    <img src="/image/@(item.Id).jpg" style="max-width: 200px; border: 1px solid gray;padding: 3px" />
                </td>
                <td>
                    @item.Name
                </td>
                <td>@item.Item.Price</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.Id">ویرایش</a>
                    <a asp-page="Delete" asp-route-id="@item.Id">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
