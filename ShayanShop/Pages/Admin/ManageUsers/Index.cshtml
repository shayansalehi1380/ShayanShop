@page
@model ShayanShop.Pages.Admin.ManageUsers.IndexModel
@{
    ViewData["Title"] = "مدیریت کاربران";
}

<h1>مدیریت کاربران</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">ایجاد کاربر جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].RegisterDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].IsAdmin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegisterDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAdmin)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.UserId">ویرایش</a> |
                    <a asp-page="./Details" asp-route-id="@item.UserId">جزئیات</a> |
                    <a asp-page="./Delete" asp-route-id="@item.UserId">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
