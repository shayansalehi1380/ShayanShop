@{

    ViewData["Title"] = "پیام ارسال شد";
}
<h1>@ViewData["Title"]</h1>

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .message-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .message-box {
        padding: 30px;
        border: 2px solid #ccc;
        border-radius: 20px;
        text-align: center;
        font-size: 24px;
        margin-top: 1vh;
    }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Centered Message Box</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="message-container">
        <div class="message-box">
            <p>پیام شما ارسال شد، با تشکر از همراهی شما</p>
        </div>
    </div>
</body>
</html>
