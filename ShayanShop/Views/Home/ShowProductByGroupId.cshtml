@model IEnumerable<Product>

@{
    ViewData["Title"] = ViewData["GroupName"];
}

<h1>محصولات @ViewData["GroupName"]</h1>
<hr />
@foreach (var item in Model)
{

    <div class="col-4">
        <div class="card">
            <img src="/image/@(item.Id).jpg" height="160" width="160" class="card-img-top img-thumbnail" />
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <a asp-action="Detail" asp-controller="Home" asp-route-id="@item.Id">جزئیات محصول</a>
            </div>
        </div>
    </div>
}